NODE_ENV=production
PORT=5000

# Database Configuration - MongoDB Atlas
# Get your connection string from MongoDB Atlas dashboard
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# DO NOT use the example value - generate a new secure secret
JWT_SECRET=your-secure-256-bit-random-secret-generated-during-setup

# Stripe API Keys (Use LIVE keys for production, not test keys)
STRIPE_SECRET_KEY=sk_live_your_actual_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_for_verifying_events

# Email Configuration (Gmail or similar SMTP service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
# Use App-Specific Password for Gmail (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_PASS=your-app-specific-password

# YouTube API Configuration - For auto-fetching video embeds
# Get your API key from: https://console.cloud.google.com/
# Required for home.about and portfolio.videos auto-resolution
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CHANNEL_ID=your-channel-id

# Google Generative AI - For AI-powered image generation
# Get your API key from: https://ai.google.dev/
# Used for automatic blog cover image generation via Gemini API
# Current implementation: Generates once on blog post publish, caches URL for reuse
GOOGLE_AI_API_KEY=your-google-generative-ai-api-key

# Frontend URL for CORS and redirects
# This should be your production domain. Use comma-separated values for multiple origins.
FRONTEND_URL=https://asrvisuals.live,https://www.asrvisuals.live

# Admin app URL for CORS
ADMIN_APP_URL=https://admin-six-steel.vercel.app

# Admin setup key for one-time admin creation
ADMIN_SETUP_KEY=replace-with-a-strong-random-key

# Default admin bootstrap (used only if no admin exists at startup)
# Change these from defaults for production.
DEFAULT_ADMIN_NAME=Admin User
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=change-this-immediately

# Support Email for notifications
SUPPORT_EMAIL=support@asrvisuals.com

# Optional: Rate Limiting Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
